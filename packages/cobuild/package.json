{
  "name": "@ckb-cobuild/cobuild",
  "version": "0.0.2",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "homepage": "https://github.com/doitian/ckb-cobuild",
  "repository": {
    "type": "git",
    "url": "https://github.com/doitian/ckb-cobuild.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "sed -i.bak -e '/\"module\":/d' -e 's;\"main\": .*;\"main\": \"./dist/index.js\",'\"\\n\"'  \"module\": \"./dist/index.mjs\",;' -e 's;\"types\": .*;\"types\": \"./dist/index.d.ts\",;' package.json",
    "postpublish": "mv -f package.json.bak package.json"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1"
  },
  "dependencies": {
    "@ckb-lumos/base": "^v0.22.0-next.0",
    "@ckb-lumos/bi": "^v0.22.0-next.0",
    "@ckb-lumos/codec": "^v0.22.0-next.0"
  }
}
