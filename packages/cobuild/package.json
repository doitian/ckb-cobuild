{
  "name": "@ckb-cobuild/cobuild",
  "version": "0.0.2",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "homepage": "https://github.com/doitian/ckb-cobuild",
  "repository": {
    "type": "git",
    "url": "https://github.com/doitian/ckb-cobuild.git"
  },
  "license": "MIT",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "sourcemap": true
  },
  "scripts": {
    "build": "tsup --clean",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "tsup-patcher",
    "postpublish": "mv -f package.json.bak package.json"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/tsup-patcher": "workspace:*",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1"
  },
  "dependencies": {
    "@ckb-lumos/base": "^v0.22.0-next.0",
    "@ckb-lumos/bi": "^v0.22.0-next.0",
    "@ckb-lumos/codec": "^v0.22.0-next.0"
  }
