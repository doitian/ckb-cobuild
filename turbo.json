{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/api/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "type-check": {},
    "//#typedoc": {
      "dependsOn": [],
      "outputs": ["apps/docs/public/api/**"]
    },
    "docs#build": {
      "dependsOn": ["//#typedoc"]
    }
  }
}
